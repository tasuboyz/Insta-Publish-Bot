# File di ambiente per Docker - Produzione
# Copia questo file come .env e configura i valori reali

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === STEEM BLOCKCHAIN ===
STEEM_USERNAME=your_steem_username
STEEM_WIF=your_steem_private_key
STEEM_NODES=https://api.steemit.com,https://api.steemdb.com
STEEM_AUTO_FIND_FASTEST=true

# === INSTAGRAM API ===
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id
FACEBOOK_GRAPH_API_VERSION=v23.0

# === FACEBOOK APP (per refresh token) ===
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# === MODALITÃ€ BOT ===
USE_WEBHOOK=false

# === WEBHOOK CONFIG (se USE_WEBHOOK=true) ===
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PATH=/webhook
WEB_APP_HOST=0.0.0.0
WEB_APP_PORT=8080

# === ALTRE CONFIGURAZIONI ===
MAX_FILE_SIZE_MB=10
LOG_LEVEL=INFO